<% picture = @post.photo ? @post.photo : "http://lorempixel.com/400/400" %>
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= picture %>) ">
  <h1><%= @post.title %></h1>
</div>
<div class="container">
  <div class="row">
    <div class="text-container">
      <p><%= @post.content %></p>
    </div>
  </div>
  <div class="row">
    <% @post.comments.each do |comment| %>
      <%= erb :'partials/_comment', :layout => false, :locals => { :comment => comment }%>
    <% end %>
  </div>
  <div class="row">
    <%= erb :'partials/_modal', :layout => false %>
  </div>
  <div class="row">
    <a href="/posts">
      <% link_name = "Return home" %>
      <%= erb :'partials/_button', :layout => false , :locals => { :link_name => link_name }%>
    </a>
  </div>
</div>
